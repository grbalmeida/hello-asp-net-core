@model Model.Entries.Department

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Create</title>
    </head>
    <body>
        <form asp-action="Create">
            <div class="form-horizontal">
                <h4>Department</h4>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col-md2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="InstitutionId" class="control-label"></label>
                <select asp-for="InstitutionId" class="form-control" asp-items="@(new SelectList(@ViewBag.Institutions, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        }
    </body>
</html>